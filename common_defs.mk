###############################################################################
#                                 Executables                                 #
###############################################################################
PREFIX    ?= 
CC        := $(PREFIX)gcc
CXX       := $(PREFIX)g++
LD        := $(PREFIX)gcc
AR        := $(PREFIX)ar
###############################################################################
#                             Include directories                             #
###############################################################################
INCLUDE_DIRS += -I$(BUILD_ROOT)/


CFLAGS += $(INCLUDE_DIRS) 

LIB_DIRS  += $(BIN_DIR)
LDFLAGS += $(addprefix -L, $(LIB_DIRS))


###############################################################################
#                                 Linker flags                                #
###############################################################################


# C files build rules
%.o: %.c
	@echo " CC" $<
	$(CC) $(CFLAGS)  -o $@ -c $<

obj/%.c.o: %.c
	@echo " CC" $<
	$(CC) $(CFLAGS)  -o $@ -c $<

